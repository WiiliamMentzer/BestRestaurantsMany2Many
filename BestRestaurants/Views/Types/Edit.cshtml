@{
  Layout = "_Layout";
}

@model BestRestaurants.Models.Type

<h1>EDIT</h1>

<h3>You are editing the information for the Type: @Html.DisplayFor(model => model.TypeName)</h3>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TypeId)

  @Html.LabelFor(model => model.TypeName)
  @Html.EditorFor(model => model.TypeName)

  <input type="submit" value="Save"/>
}

