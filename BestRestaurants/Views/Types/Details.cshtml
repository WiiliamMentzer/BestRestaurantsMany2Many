@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;

<h2>Details For @Model.TypeName</h2>

@if (Model.JoinEntities.Count == 0)
{
  <p>This cuisint type has no Restaurants bound to it!!!</p>
}

<ul>
  @foreach (var join in Model.JoinEntities)
  {
    <li>@Html.ActionLink($"{join.Restaurant.Name}", "Details" ,"Restaurants", new { id = join.Restaurant.RestaurantId})</li>
  }
</ul>

<p>@Html.ActionLink("See all food types", "Index", "Types")</p>
<p>@Html.ActionLink("See All Restaurants", "Index", "Restaurants")</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>