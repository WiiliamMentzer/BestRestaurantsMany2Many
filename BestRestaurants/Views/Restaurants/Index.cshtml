@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Restaurant>;

<h1>Your Reviewed Restaurants</h1>

@if (@Model.Count == 0)
{
  <h3>
    You haven't reviewed any restaurants yet!
  </h3>
}

<ul>
  @foreach(Restaurant restaurant in Model)
  {
    <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId })</li>
  }
</ul>

<p>
  @Html.ActionLink("Review a Restaurant", "Create")
</p>
<p>
  @Html.ActionLink("See all food types", "Index", "Types")
</p>

<p>@Html.ActionLink("Return Home", "Index", "Home")</p>


